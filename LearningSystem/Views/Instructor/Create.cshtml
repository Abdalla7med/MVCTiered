@model Common.InstructorCreateDto
@* 
    asp-for is a Html binding way to bind the property form the forum to the model
*@
@{
    ViewData["Title"] = "Add Instructor";
}

<h2>Add New Instructor</h2>

<form asp-action="Create" method="post">
    <!-- Name Input -->
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <!-- Salary Input -->
    <div calss ="form-group">
        <label asp-for = "Salary"></label>
        <input asp-for="Salary" class="form-control" />
        <span asp-validation-for="Salary" class="text-danger"></span>
    </div>

    <!-- Image Url Input -->
    <div calss="form-group">
        <label asp-for="ImageUrl"></label>
        <input asp-for="ImageUrl" class="form-control" />
        <span asp-validation-for="ImageUrl" class="text-danger"></span>
    </div>

    <!-- Address Input -->
    <div calss="form-group">
        <label asp-for="address"></label>
        <input asp-for="address" class="form-control" />
        <span asp-validation-for="address" class="text-danger"></span>
    </div>

    <!-- Department Drop-down List -->

    <div class="form-group">
        <label for="DepartmentId">Department</label>
        <select asp-for="DeptID" class="form-control">
            <option value="">--Select Department--</option>
            @foreach (var department in ViewBag.Departments)
            {
                <option value="@department.Id">@department.Name</option>
            }
        </select>
        <span asp-validation-for="DeptID" class="text-danger"></span>
    </div>
    
    <!-- Course Check-list -->
    <div class="form-group">
        <label for="CourseIds">Courses</label>
        <br/>
        @foreach (var course in ViewBag.Courses)
        {
            <input type="checkbox" name="CourseIds" value="@course.Id" /> @course.Name <br />
        }
    </div>

    <!-- Submit Button -->
    <button type="submit" class="btn btn-secondary">Save</button>
</form>
