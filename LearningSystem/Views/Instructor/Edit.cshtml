@model Common.InstructorEditDto

@{
    ViewData["Title"] = "Edit Instructor";
}

<h2>Edit Instructor</h2>

<form asp-action="Edit" method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <!-- Salary Input -->
    <div calss="form-group">
        <label asp-for="Salary"></label>
        <input asp-for="Salary" class="form-control" />
        <span asp-validation-for="Salary" class="text-danger"></span>
    </div>

    <!-- Image Url Input -->
    <div calss="form-group">
        <label asp-for="ImageUrl"></label>
        <input asp-for="ImageUrl" class="form-control" />
        <span asp-validation-for="ImageUrl" class="text-danger"></span>
    </div>

    <!-- Address Input -->
    <div calss="form-group">
        <label asp-for="address"></label>
        <input asp-for="address" class="form-control" />
        <span asp-validation-for="address" class="text-danger"></span>
    </div>


    <div class="form-group">
        <label for="DepartmentId">Department</label>
            <select asp-for="DeptID" class="form-control">
                @foreach (var department in ViewBag.Departments)
                {
                     bool isSelected = (department.Id == Model.DeptID);
                    if(isSelected){
                        <option value="@department.Id" selected >
                            @department.Name
                        </option>
                    }else{
                         <option value="@department.Id"  >
                                @department.Name
                            </option>
                    }
                }
            </select>
        <span asp-validation-for="DeptID" class="text-danger"></span>
<   /div>


    <div class="form-group">
        <label for="CourseIds">Courses</label>
        @foreach (var course in ViewBag.Courses)
        {
                <input type="checkbox" name="CourseIds" value="@course.Id"
                    @(Model != null && Model.CourseIds != null && Model.CourseIds.Contains(course.Id) ? "checked" : "") />
                    @course.Name <br />

        }
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
